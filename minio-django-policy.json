  {
      "Version": "2012-10-17",
      "Statement": [
        {
          "Effect": "Allow",
          "Action": [
            "s3:ListBucket",
            "s3:GetBucketLocation", 
            "s3:ListMultipartUploadParts"

          ],
          "Resource": [
            "arn:aws:s3:::static",
            "arn:aws:s3:::media"
          ]
        },
        {
          "Effect": "Allow",
          "Action": [
            "s3:GetObject",
            "s3:PutObject",
            "s3:DeleteObject"
          ],
          "Resource": [
            "arn:aws:s3:::static/*",
            "arn:aws:s3:::media/*"
          ]
        }
      ]
    }